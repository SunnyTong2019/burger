<h1>Eat-Da-Burger!</h1>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <p>{{this.id}}. {{this.burger_name}}</p>
    <button data-burgerid="{{this.id}}" class="devourBurger">Devour It!</button>
    {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <p>{{this.id}}. {{this.burger_name}}</p>
    {{/if}}
    {{/each}}
</ul>

<form id="addBurger" class="button-size">
    <textarea type="text" name="burger"></textarea>
    <button type="submit">Submit</button>
</form>

<script type="text/javascript">

    $("#addBurger").on("submit", function (event) {

        event.preventDefault();

        var newBurger = {
            burger: $("#addBurger [name=burger]").val().trim()
        };

        $.ajax("/api/burgers", {
            type: "POST",
            data: newBurger
        }).then(
            function () {
                location.reload();
            }
        );
    });


    $(".devourBurger").on("click", function (event) {

        var id = $(this).data("burgerid");

        $.ajax("/api/burgers/" + id, {
            type: "PUT"
        }).then(
            function () {
                location.reload();
            }
        );
    });

</script>